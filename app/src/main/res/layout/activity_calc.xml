<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_large"
    tools:context=".CalcActivity">

    <TextView
        android:id="@+id/txtHistorico"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="bottom|end"
        android:padding="@dimen/padding_medium"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="@dimen/font_size_large"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/txtResultado"/>

    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="0"
        android:textSize="@dimen/font_size_display_small"
        android:maxLines="2"
        android:ellipsize="start"
        android:textColor="?android:attr/textColorPrimary"
        android:background="?attr/colorSurfaceContainer"
        android:padding="@dimen/padding_large"
        app:layout_constraintBottom_toTopOf="@id/gridButtons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <GridLayout
        android:id="@+id/gridButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:rowCount="5"
        android:columnCount="4"
        android:alignmentMode="alignMargins"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClear"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_columnWeight="1"
            android:text="C" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBackspace"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_columnWeight="1"
            android:text="⌫" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPorcentagem"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_columnWeight="1"
            android:text="%" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDividir"
            style="@style/Widget.Material3.Button"
            android:layout_columnWeight="1"
            android:text="÷" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn7" style="@style/Widget.Material3.Button.TonalButton"
            android:layout_columnWeight="1" android:text="7" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn8" style="@style/Widget.Material3.Button.TonalButton"
            android:layout_columnWeight="1" android:text="8" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn9" style="@style/Widget.Material3.Button.TonalButton"
            android:layout_columnWeight="1" android:text="9" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMultiplicar" style="@style/Widget.Material3.Button"
            android:layout_columnWeight="1" android:text="×" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn4" style="@style/Widget.Material3.Button.TonalButton"
            android:layout_columnWeight="1" android:text="4" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn5" style="@style/Widget.Material3.Button.TonalButton"
            android:layout_columnWeight="1" android:text="5" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn6" style="@style/Widget.Material3.Button.TonalButton"
            android:layout_columnWeight="1" android:text="6" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSubtrair" style="@style/Widget.Material3.Button"
            android:layout_columnWeight="1" android:text="-" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn1" style="@style/Widget.Material3.Button.TonalButton"
            android:layout_columnWeight="1" android:text="1" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn2" style="@style/Widget.Material3.Button.TonalButton"
            android:layout_columnWeight="1" android:text="2" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn3" style="@style/Widget.Material3.Button.TonalButton"
            android:layout_columnWeight="1" android:text="3" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSomar" style="@style/Widget.Material3.Button"
            android:layout_columnWeight="1" android:text="+" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnInverterSinal"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_columnWeight="1"
            android:text="+/-" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn0" style="@style/Widget.Material3.Button.TonalButton"
            android:layout_columnWeight="1" android:text="0" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPonto" style="@style/Widget.Material3.Button.TonalButton"
            android:layout_columnWeight="1" android:text="." />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnIgual" style="@style/Widget.Material3.Button"
            android:layout_columnWeight="1" android:text="=" />
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>